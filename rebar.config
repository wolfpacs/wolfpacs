%% -*- mode: erlang -*-

{erl_opts, [debug_info,
            warn_deprecated_function,
            warn_deprecated_type,
            warn_export_all,
            warn_export_vars,
            warn_obsolete_guard,
            warn_untyped_record,
            warnings_as_errors,
            warn_unused_import
           ]}.

{dialyzer, [{warnings, [ error_handling
                       , race_conditions
                         %% , overspecs
                         %% , underspecs
                         %% , specdiffs
                       ]}]}.

{xref_checks, [undefined_function_calls,
               undefined_functions,
               locals_not_used,
               deprecated_function_calls,
               deprecated_functions]}.

{deps, [ {ranch, "1.7.1"}
       , {recon, "2.5.0"}
       , {riak_core, {pkg, riak_core_lite}}
       , riak_core_lite_util
       ]}.

{edoc_opts, [{preprocess, true},
             {stylesheet_file, "./priv/edoc.css"},
             {overview, "./priv/overview.edoc"}]}.

{eunit_opts, [no_tty,
              {report, {eunit_progress, [colored, profile]}}
             ]}.

%% {shell, [{apps, [wolfpacs]}]}.

{cover_enabled, true}.
{cover_export_enabled,true}.

%% Modules to exclude from cover
{cover_excl_mods, []}.

{project_plugins, [
                   rebar3_proper,
                   rebar3_hex,
                   {rebar3_codecov, "0.2.0"}
                  ]}.

{provider_hooks,
 [
  {post, [{ct, {codecov, analyze}}]},
  {post, [{eunit, {codecov, analyze}}]},
  {post, [{proper, {codecov, analyze}}]}
 ]}.

{relx, [{release, {wolfpacs, "0.4.0"},
         [wolfpacs,
          crypto,
          sasl,
          ranch,
          recon]},

        {sys_config, "./config/sys.config"},
        {vm_args, "./config/vm.args"},

        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true},

        {overlay, [
                   {mkdir, "etc"},
                   {mkdir, "bin"},
                   {mkdir, "data/ring"},
                   {mkdir, "log/sasl"}
                  ]}
       ]}.

{profiles, [{test, [{erl_opts, [nowarn_export_all]},
                    {deps, [proper]}
                   ]},
            {prod, [{relx, [{dev_mode, false},
                            {include_erts, true}]}
                   ]},
            {dev1, [{relx, [
                            {sys_config, "config/sys_dev1.config"},
                            {vm_args, "config/vm_dev1.args"}
                           ]}]},
            {dev2, [{relx, [
                            {sys_config, "config/sys_dev2.config"},
                            {vm_args, "config/vm_dev2.args"}
                           ]}]},
            {dev3, [{relx, [
                            {sys_config, "config/sys_dev3.config"},
                            {vm_args, "config/vm_dev3.args"}
                           ]}]}
           ]}.
